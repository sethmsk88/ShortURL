@model UrlDto

@{
    ViewData["Title"] = "Create Short URL";
}

<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">Create a Short URL</h4>
        <form asp-controller="Short" asp-action="CreateShortUrl">
            <div class="form-group row">
                <div class="col-sm-10">
                    <input asp-for="LongUrl" class="form-control" placeholder="http://really-long-url.com/more-words" />
                    <span asp-validation-for="LongUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Create Short URL</button>
                </div>
            </div>
        </form>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
</div>

@{
    if (Model != null)
    {
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Here is Your Short URL</h4>
                <div class="row">
                    <div class="col-sm-10">
                        <a href="@Model.ShortUrlWithDomain" target="_blank">@Model.ShortUrlWithDomain</a>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
